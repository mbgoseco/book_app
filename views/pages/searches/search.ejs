<!DOCTYPE html>
<html>
<head>
  <title>Search for Books</title>
  <%- include('../../layout/styleLinks') %>
</head>
<body>
  <%- include('../../layout/header') %>
  <header id="head2">
    Search by Title or Author
  </header>
  <form action="/searches" method="POST">
    <label id="input">
      <input id="textbox" type="text" name="search_field" placeholder="Enter title or author" required>
    </label>
    <label id="intitle">
      <input type="radio" name="searchby" value="intitle" required>
      Search titles
    </label>
    <label id="inauthor">
      <input type="radio" name="searchby" value="inauthor">
      Search authors
    </label>
    <button type="submit">Search</button>
  </form>
</body>
</html>
