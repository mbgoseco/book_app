<h2 class="form-title"><%- formAction === 'update' ? "Update Book" : "Add Book" %></h2>
<form id="template" action="<%= 'update' === formAction ? `/update/${book.id}` :'/add' %>" method="post">
  <input type="hidden" name="_method" value="<%- 'update' === formAction ? 'put' : 'post' %>">
  <label>Author<input type="text" name="author" value="<%- book.author %>" required></label>
  <label>Title<input type="text" name="title" value="<%- book.title %>" required></label>
  <label>ISBN #<input type="text" name="isbn" value="<%- book.isbn %>" required></label>
  <label>Image URL<input type="text" name="image_url" value="<%- book.image_url %>"></label>
  <label>Description<textarea name="description" cols="30" rows="10" required><%- book.description %></textarea></label>
  <label>Bookshelf Name<input type="text" name="bookshelf" placeholder="Bookshelf name" required></label>
  <!-- <select id="select-bookshelf" name="bookshelf"></select> -->
  <!-- ternary partial went here but it broke the app :(  -->
  
  <button type="submit"><%- 'update' === formAction ? "Update Book" : "Add Book" %></button>
</form>